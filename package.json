{
  "name": "perfectform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "functions"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "check:all": "yarn check:lint && yarn check:prettier && tsc --noEmit && yarn run test",
    "check:lint": "eslint --ext .jsx,.ts,.tsx --ignore-path .gitignore .",
    "check:prettier": "prettier --check '**/*.{js,jsx,ts,tsx}'",
    "fix:all": "yarn fix:lint && yarn fix:prettier",
    "fix:prettier": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "fix:lint": "yarn check:lint --fix"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "dompurify": "^3.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-quill": "^2.0.0"
  },
  "devDependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/material": "^5.15.19",
    "@mui/utils": "^5.15.14",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.5",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "@vitejs/plugin-react": "^4.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-no-skip-tests": "^1.1.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-unused-imports": "^3.2.0",
    "jsdom": "^24.1.0",
    "prettier": "^3.3.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "packageManager": "yarn@4.2.2"
}
